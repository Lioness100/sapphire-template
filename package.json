{
	"name": "sapphire-template",
	"version": "0.0.1",
	"description": "Template for my typescript Discord bot projects",
	"main": "dist/index.js",
	"repository": "https://github.com/Lioness100/sapphire-template",
	"author": "Lioness100 <jchickmm2@gmail.com>",
	"license": "Apache-2.0",
	"type": "module",
	"private": true,
	"imports": {
		"#root/*": "./dist/*.js",
		"#lib/*": "./dist/lib/*.js",
		"#structures/*": "./dist/lib/structures/*.js",
		"#utils/*": "./dist/lib/utils/*.js"
	},
	"scripts": {
		"pm2": "pm2 start pm2.ecosystem.yml",
		"start": "node --enable-source-maps .",
		"lint": "eslint src tests scripts --ext js,ts --fix",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"update": "yarn upgrade-interactive",
		"build": "node scripts/build.js",
		"watch": "node scripts/watch.js",
		"clean": "node scripts/clean.js",
		"dev": "run-s clean build start",
		"test": "jest --coverage",
		"typecheck": "tsc -p src --noEmit",
		"prepare": "husky install"
	},
	"dependencies": {
		"@discordjs/builders": "0.9.0",
		"@sapphire/decorators": "^3.1.4",
		"@sapphire/discord.js-utilities": "^4.1.5",
		"@sapphire/framework": "2.3.0-pr-293.501f6a8.0",
		"@sapphire/plugin-logger": "^2.1.1",
		"@sapphire/stopwatch": "^1.2.4",
		"@sapphire/type": "^2.1.2",
		"@sapphire/utilities": "^3.1.0",
		"colorette": "^2.0.16",
		"discord-api-types": "^0.25.2",
		"discord.js": "^13.3.1",
		"dotenv": "^10.0.0",
		"envalid": "^7.2.2",
		"fuse.js": "^6.4.6",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^15.0.0",
		"@commitlint/config-conventional": "^15.0.0",
		"@sapphire/cli": "^1.0.2",
		"@sapphire/eslint-config": "^4.0.8",
		"@sapphire/prettier-config": "^1.2.7",
		"@sapphire/ts-config": "^3.1.6",
		"@types/jest": "^27.0.3",
		"@types/node": "^16.11.12",
		"esbuild": "^0.14.2",
		"eslint": "^8.4.1",
		"husky": "^7.0.4",
		"jest": "^27.4.4",
		"lint-staged": "^12.1.2",
		"npm-run-all": "^4.1.5",
		"pm2": "^5.1.2",
		"prettier": "^2.5.1",
		"pretty-quick": "^3.1.2",
		"ts-jest": "^27.1.1",
		"typescript": "^4.5.3"
	},
	"engines": {
		"node": ">=16.6",
		"npm": ">=7"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --fix --ext js,ts"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.1.0"
}
