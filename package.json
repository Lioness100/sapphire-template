{
  "name": "sapphire-template",
  "version": "1.0.0",
  "description": "Template for my typescript Discord bot projects",
  "main": "dist/index.js",
  "repository": "https://github.com/Lioness100/sapphire-template",
  "author": "Lioness100 <jchickmm2@gmail.com>",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "imports": {
    "#root/*": "./dist/*.js",
    "#utils/*": "./dist/lib/utils/*.js",
    "#structures/*": "./dist/lib/structures/*.js"
  },
  "scripts": {
    "pm2": "pm2 start ecosystem.yml",
    "start": "node --enable-source-maps .",
    "lint": "eslint .",
    "format": "prettier --write \"{*,src/**/*}.{json,js,ts}\"",
    "build": "tsup --config configs/tsup.config.js"
  },
  "dependencies": {
    "@discordjs/builders": "^1.3.0",
    "@sapphire/decorators": "^4.3.6",
    "@sapphire/discord.js-utilities": "^4.11.3",
    "@sapphire/framework": "next",
    "@sapphire/plugin-logger": "^2.2.1",
    "@sapphire/stopwatch": "^1.4.1",
    "@sapphire/type": "^2.2.4",
    "@sapphire/utilities": "^3.7.0",
    "colorette": "^2.0.16",
    "discord.js": "^13.7.0",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "fuse.js": "^6.6.2"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.6",
    "utf-8-validate": "^5.0.9",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@types/node": "^17.0.38",
    "configs": "npm:@lioness100/configs@1.0.3",
    "eslint": "^8.16.0",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "tsup": "^6.0.1",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": "configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/configs/.eslintrc.json"
    ]
  },
  "packageManager": "yarn@3.2.4"
}
