{
	"name": "sapphire-template",
	"version": "0.0.1",
	"description": "Template for my typescript Discord bot projects",
	"main": "dist/index.js",
	"repository": "https://github.com/Lioness100/sapphire-template",
	"author": "Lioness100 <jchickmm2@gmail.com>",
	"license": "Apache-2.0",
	"type": "module",
	"private": true,
	"imports": {
		"#root/*": "./dist/*.js",
		"#utils/*": "./dist/lib/utils/*.js",
		"#structures/*": "./dist/lib/structures/*.js"
	},
	"scripts": {
		"pm2": "pm2 start pm2.ecosystem.yml",
		"start": "node --enable-source-maps .",
		"lint": "eslint src --ext js,ts --fix",
		"format": "prettier --write \"src/**/*.[jt]s\"",
		"update": "yarn upgrade-interactive",
		"build": "tsup",
		"watch": "tsup --watch",
		"dev": "tsup --watch --onSuccess \"yarn start\"",
		"typecheck": "tsc -b src"
	},
	"dependencies": {
		"@discordjs/builders": "0.15.0",
		"@sapphire/decorators": "^4.3.6",
		"@sapphire/discord.js-utilities": "^4.11.3",
		"@sapphire/framework": "next",
		"@sapphire/plugin-logger": "^2.2.1",
		"@sapphire/stopwatch": "^1.4.1",
		"@sapphire/type": "^2.2.4",
		"@sapphire/utilities": "^3.7.0",
		"colorette": "^2.0.19",
		"discord-api-types": "^0.36.1",
		"discord.js": "^13.8.1",
		"dotenv": "^16.0.1",
		"envalid": "^7.3.1",
		"fuse.js": "^6.6.2"
	},
	"optionalDependencies": {
		"bufferutil": "^4.0.6",
		"utf-8-validate": "^5.0.9",
		"zlib-sync": "^0.1.7"
	},
	"devDependencies": {
		"@sapphire/eslint-config": "^4.3.7",
		"@sapphire/prettier-config": "^1.4.3",
		"@sapphire/ts-config": "^3.3.4",
		"@types/node": "^17.0.38",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"eslint": "^8.19.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-unicorn": "^42.0.0",
		"pm2": "^5.2.0",
		"prettier": "^2.7.1",
		"tsup": "^6.1.3",
		"typescript": "^4.7.4"
	},
	"resolutions": {
		"@discordjs/collection": "0.7.0"
	},
	"engines": {
		"node": ">=16.6",
		"npm": ">=7"
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.1"
}
