{
  "name": "sapphire-template",
  "version": "1.0.0",
  "description": "Template for my typescript Discord bot projects",
  "main": "dist/index.js",
  "repository": "https://github.com/Lioness100/sapphire-template",
  "author": "Lioness100 <jchickmm2@gmail.com>",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "imports": {
    "#structures/*": "./dist/lib/structures/*.js",
    "#utils/*": "./dist/lib/utils/*.js",
    "#root/*": "./dist/*.js"
  },
  "scripts": {
    "pm2": "pm2 start ecosystem.yml",
    "start": "node --enable-source-maps .",
    "lint": "eslint .",
    "format": "prettier --write \"{*,src/**/*}.{json,js,ts}\"",
    "build": "tsup --config @lioness100/configs/tsup.config.js"
  },
  "dependencies": {
    "@sapphire/decorators": "pr-434",
    "@sapphire/discord.js-utilities": "pr-434",
    "@sapphire/framework": "pr-512",
    "@sapphire/utilities": "^3.11.0",
    "colorette": "^2.0.19",
    "discord.js": "^14.6.0",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "fuse.js": "^6.6.2",
    "tslog": "^3.3.4"
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^5.0.10",
    "zlib-sync": "^0.1.7"
  },
  "devDependencies": {
    "@lioness100/configs": "^1.0.6",
    "@types/node": "^18.11.9",
    "eslint": "^8.27.0",
    "pm2": "^5.2.2",
    "prettier": "^2.7.1",
    "tsup": "^6.4.0",
    "typescript": "rc"
  },
  "engines": {
    "node": ">=14"
  },
  "prettier": "@lioness100/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@lioness100/configs/.eslintrc.json"
    ]
  },
  "packageManager": "yarn@3.2.4"
}
