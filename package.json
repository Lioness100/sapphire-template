{
	"name": "sapphire-template",
	"version": "0.0.1",
	"description": "Template for my typescript Discord bot projects",
	"main": "dist/index.js",
	"repository": "https://github.com/Lioness100/sapphire-template",
	"author": "Lioness100 <jchickmm2@gmail.com>",
	"license": "Apache-2.0",
	"type": "module",
	"private": true,
	"imports": {
		"#root/*": "./dist/*.js",
		"#lib/*": "./dist/lib/*.js",
		"#structures/*": "./dist/lib/structures/*.js",
		"#utils/*": "./dist/lib/utils/*.js"
	},
	"scripts": {
		"pm2": "pm2 start pm2.ecosystem.yml",
		"start": "node --enable-source-maps .",
		"lint": "eslint src tests --ext js,ts --fix",
		"format": "prettier --write \"{src,tests}/**/*.[jt]s\"",
		"update": "yarn upgrade-interactive",
		"build": "tsup",
		"watch": "tsup --watch",
		"dev": "tsup --watch --onSuccess \"yarn start\"",
		"test": "jest --coverage",
		"typecheck": "tsc -b src",
		"prepare": "husky install"
	},
	"dependencies": {
		"@discordjs/builders": "0.12.0",
		"@sapphire/decorators": "^4.3.4",
		"@sapphire/discord.js-utilities": "^4.9.4",
		"@sapphire/framework": "^3.0.0-next.fd7be0b.0",
		"@sapphire/plugin-logger": "^2.2.1",
		"@sapphire/stopwatch": "^1.4.1",
		"@sapphire/type": "^2.2.0",
		"@sapphire/utilities": "^3.6.2",
		"colorette": "^2.0.16",
		"discord-api-types": "^0.31.1",
		"discord.js": "^13.6.0",
		"dotenv": "^16.0.0",
		"envalid": "^7.3.1",
		"fuse.js": "^6.5.3",
		"tslib": "^2.3.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.3",
		"@commitlint/config-conventional": "^16.2.1",
		"@sapphire/eslint-config": "^4.3.3",
		"@sapphire/prettier-config": "^1.4.2",
		"@sapphire/ts-config": "^3.3.4",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.10",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"esbuild-jest": "^0.5.0",
		"eslint": "^8.13.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-unicorn": "^42.0.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"lint-staged": "^12.3.8",
		"npm-run-all": "^4.1.5",
		"pm2": "^5.2.0",
		"prettier": "^2.6.2",
		"pretty-quick": "^3.1.3",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.5",
		"typescript": "^4.6.3"
	},
	"resolutions": {
		"@discordjs/collection": "0.5.0"
	},
	"engines": {
		"node": ">=16.6",
		"npm": ">=7"
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --fix --ext js,ts"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"prettier": "@sapphire/prettier-config",
	"packageManager": "yarn@3.2.0"
}
